<body>
  <%- include('./layouts/header'); %>
  <div class="card mb-3 my-3 mx-3 align-middle">
    <div class="row g-0">
      <div class="col-md-5">
        <img
          src="/files/products/<%=product.image %>"
          class="img-fluid rounded-start"
          alt="..."
        />
      </div>
      <div class="col-md-7">
        <div class="card-body">
          <h5 class="card-title p-3"><%= product.name %></h5>
          <h2 class="card-text">
            <small class="text-body-secondary p-2">â‚¹<%= product.price %></small>
          </h2>
          <% let des=[]; des=product.description.split(",") %> <%
          des.forEach((feature)=>{%>
          <li class="card-text p-1"><%=feature%></li>
          <%});%>
          <div class="p-4">
            <a class="btn btn-success p-1" href="checkout/<%= product._id %>">
              Click to Buy</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
